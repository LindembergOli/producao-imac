# Vari√°veis de Ambiente - Backend IMAC Congelados

# Ambiente
NODE_ENV=development

# Servidor
PORT=3001
HOST=localhost

# Database PostgreSQL
DATABASE_URL="postgresql://usuario:senha@localhost:5432/imac_congelados?schema=public"

# JWT
JWT_SECRET=sua_chave_secreta_super_segura_aqui_min_32_caracteres
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=sua_chave_refresh_super_segura_aqui_min_32_caracteres
JWT_REFRESH_EXPIRES_IN=30d

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
