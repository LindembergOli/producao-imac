# ==============================================
# Configuração do Banco de Dados (PostgreSQL)
# ==============================================
POSTGRES_USER=imac_user
POSTGRES_PASSWORD=imac_password
POSTGRES_DB=imac_congelados

# ==============================================
# Configuração do Backend
# ==============================================
NODE_ENV=development
PORT=3001
# URL de conexão com o banco (usada pelo Prisma)
# Em Docker, use o nome do serviço (postgres) como host
DATABASE_URL=postgresql://imac_user:imac_password@postgres:5432/imac_congelados?schema=public

# Segredos JWT (Gere strings longas e aleatórias para produção)
JWT_SECRET=dev_jwt_secret_change_in_production_min_32_chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=dev_refresh_secret_change_in_production_min_32
JWT_REFRESH_EXPIRES_IN=30d

# Segurança
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOG_LEVEL=debug

# ==============================================
# Configuração do Frontend
# ==============================================
# URL da API para o frontend
VITE_API_URL=http://localhost:3001/api
